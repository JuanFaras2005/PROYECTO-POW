@model MvcTemplate.Models.ViewModels.AdminUsuarios.EditarRolesViewModel

@{
    ViewData["Title"] = "Editar Roles del Usuario";
}

<h2>Editar Roles de: @Model.Email</h2>

<form asp-action="EditarRoles" method="post">
    <input type="hidden" asp-for="UsuarioId" />
    <table class="table">
        <thead>
            <tr>
                <th>Rol</th>
                <th>Asignado</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>@Model.Roles[i].Nombre</td>
                    <td>
                        <input asp-for="Roles[i].Seleccionado" />
                        <input type="hidden" asp-for="Roles[i].Nombre" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
