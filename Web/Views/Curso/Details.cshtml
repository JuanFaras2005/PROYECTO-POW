@using Domain

@model Domain.Curso

@{
    ViewData["Title"] = "Detalles del Curso";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
        <dt class="col-sm-2">Profesor</dt>
<dd class="col-sm-10">@Model.Profesor?.Nombre</dd>

        
    </dl>


    <a class="btn btn-primary" asp-action="Index" asp-controller="Curso">Volver a la lista</a>
</div>
