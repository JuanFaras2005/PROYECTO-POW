@model MvcTemplate.Models.ProfesorViewModel

@{
    ViewData["Title"] = "Eliminar Profesor";
}

<h2>Eliminar Profesor</h2>

<h4>¿Estás seguro de que deseas eliminar este profesor?</h4>

<div class="card mt-3 p-3">
    <dl class="row">
        <dt class="col-sm-2">Nombre completo</dt>
        <dd class="col-sm-10">@Model.NombreCompleto</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-action="EliminarConfirmado" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
